@model Product
@{
    ViewData["Title"] = Model.Name;
}

<h2>Details</h2>
<div class="row">
    <div class="col-7 mt-1">
        <div class="card">
            <img src="@Model.CoverImage" width="300" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text text-success fw-bold">$@Model.Price</p>
                <p class="card-text"> @Model.Description </p>

                @foreach (var image in Model.AdditionalImages)
                {
                    <img src="@image" width="200">
                }
            </div>
        </div>
    </div>
</div>